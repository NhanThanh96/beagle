extends modules/layout/_page-default
             
block head
  +head('Beagle')

block main
  +header("Dashboard")
  +sidebarLeft("be-01-index.html")
  +sidebarRight()
  section.page-content.index
    .main-content.container-fluid
      .row 
        .col-12.col-lg-6.col-xl-3
          .widget 
            .row
              .col-auto
                .chart.sparkline#chart1
              .col
                .data-info
                  .desc New Users
                  .value
                    i.indicator.indicator--equal.zmdi.zmdi-chevron-right
                    span.number(data-toggle= "counter" data-end= "113") 0
        .col-12.col-lg-6.col-xl-3
          .widget
            .row
              .col-auto
                .chart.sparkline#chart2
              .col
                .data-info
                  .desc Monthly Sales
                  .value
                    i.indicator.indicator--positive.zmdi.zmdi-chevron-up
                    span.number(data-toggle="counter" data-end="80" data-suffix="%") 0
        .col-12.col-lg-6.col-xl-3
          .widget
            .row
              .col-auto
                .chart.sparkline#chart3
              .col
                .data-info
                  .desc Impressions
                  .value
                    i.indicator.indicator--positive.zmdi.zmdi-chevron-up
                    span.number(data-toggle="counter" data-end="532") 0
        .col-12.col-lg-6.col-xl-3
          .widget
            .row
              .col-auto
                .chart.sparkline#chart4
              .col
                .data-info
                  .desc Downloads
                  .value
                    i.indicator.indicator--negative.zmdi.zmdi-chevron-down
                    span.number(data-toggle="counter" data-end="113") 0
          
      .row
        .col-12.col-lg-6
          .card.card-table.table-stats
            .card-header
              .title Purchases
              .dropdown
                .dropdown__btn
                  i.zmdi.zmdi-download
                  a(class="dropdown-btn" href="#" role="button" data-toggle="dropdown")
                    i.zmdi.zmdi-more-vert
                  .dropdown-menu
                    a.dropdown-item Action
                    a.dropdown-item Another action
                    a.dropdown-item Something else here
                    .dropdown-divider
                    a.dropdown-item Separated link
            .card-body.table-responsive
              table(class="table table-striped table-index")
                thead
                  tr
                    th(style="width:40%") Product
                    th(class="number") Price
                    th(style="width:20%") Date
