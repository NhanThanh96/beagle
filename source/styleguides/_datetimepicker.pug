.row
  .col-12.col-sm-12.col-md-6
    .code-example
      h4.h4 Date Picker Default
      .demo
        +datetimepicker({
          id: 'date1'
        })
      pre
        code
          |+datetimepicker({
          |  id: 'date1'
          |})
  .col-12.col-sm-12.col-md-6
    .code-example
      h4.h4 Date Picker Readonly
      .demo
        +datetimepicker({
          size: "16",
          icon: 'zmdi zmdi-calendar',
          readonly: true
        })
      pre
        code
          |+datetimepicker({
          | size: "16",
          |  icon: 'zmdi zmdi-calendar',
          |  readonly: true
          |})

