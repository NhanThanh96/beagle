  .col-12.col-sm-12.col-md-6
    .code-example
      h4.h4 Date Picker Only Date
      .demo
        +datetimepicker({
          icon: 'zmdi zmdi-calendar',
        })(data-date-format="yyyy-mm-dd", data-min-view="2")
